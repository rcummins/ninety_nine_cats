<h1><%= @cat.name %></h1>

<table>
    <thead>
        <tr>
            <th>Attribute</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Age</td>
            <td><%= @cat.age %></td>
        </tr>
        <tr>
            <td>Birth date</td>
            <td><%= @cat.birth_date %></td>
        </tr>
        <tr>
            <td>Color</td>
            <td><%= @cat.color %></td>
        </tr>
        <tr>
            <td>Sex</td>
            <td><%= @cat.sex %></td>
        </tr>
    </tbody>
</table>

<p><%= @cat.description %></p>

<h2>Rental requests</h2>

<table>
    <thead>
        <tr>
            <th>Start date</th>
            <th>End date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        <% @cat_rental_requests.each do |request| %>
            <tr>
                <td><%= request.start_date %></td>
                <td><%= request.end_date %></td>
                <td><%= request.status %></td>
                <% if request.status == 'PENDING' && current_user == @cat.owner %>
                    <td>
                        <form action="<%= approve_cat_rental_request_url(request) %>" method="post">
                            <input type="hidden"
                                name="authenticity_token"
                                value="<%= form_authenticity_token %>">

                            <input type="submit" value="Approve">
                        </form>
                    </td>
                    <td>
                        <form action="<%= deny_cat_rental_request_url(request) %>" method="post">
                            <input type="hidden"
                                name="authenticity_token"
                                value="<%= form_authenticity_token %>">

                            <input type="submit" value="Deny">
                        </form>
                    </td>
                <% else %>
                    <td></td>
                    <td></td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>